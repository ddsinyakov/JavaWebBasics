  <!-- DataBase connection filter -->

  <filter>
    <filter-name>DBFilter</filter-name>
    <filter-class>step.learning.filters.DBFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>DBFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



</web-app>
